@model  HomeCrud.Core.Request.UpdateHomeRequest

@{
    ViewBag.Title = "Update";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Update Home: @Model.Name</h2>
    </div>
</div>

@using (Html.BeginForm("Update", "Homes", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true);
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-xs-2 control-label" })
        <div class="col-xs-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = Html.DisplayNameFor(m2 => m2.Name) })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-xs-2 control-label" })
        <div class="col-xs-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = Html.DisplayNameFor(m2 => m2.Address) })
            @Html.ValidationMessageFor(m => m.Address)
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
}