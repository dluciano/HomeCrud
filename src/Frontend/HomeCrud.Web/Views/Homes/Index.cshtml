@model  IEnumerable<HomeCrud.Core.Response.HomeRowResponse>

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Homes</h2>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <a class="btn btn-default" href="@Url.Action("Create", "Homes")">Create New Home</a>
    </div>
</div>

<div class="row" style="margin-top: 5px;">
    <div class="col-xs-12">
        <table class="table table-bordered table-responsive table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.People)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.People</td>
                        <td>
                            <a href="@Url.Action("Details", "Homes", new { id=item.Id })" class="btn btn-default">Details</a>
                            <a href="@Url.Action("Update", "Homes", new { id=item.Id })" class="btn btn-default">Update</a>
                            @using (Html.BeginForm("Delete", "Homes", new { id = item.Id }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" href="@Url.Action()" class="btn btn-warning">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>